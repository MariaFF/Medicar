<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="10dp"
              android:orientation="horizontal">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        card_view:contentPadding="6dp"
        card_view:cardBackgroundColor="#cecbcb"
        card_view:cardElevation="8dp"
        card_view:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/medicamento_tv_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Nome Remedio"/>

        <TextView
            android:id="@+id/medicamento_tv_dtInicial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:text="Data Inicial"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/medicamento_tv_hora_tomar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora do Remédio"/>

            <TextView
                android:id="@+id/medicamento_tv_dose1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Dose"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/medicamento_tv_hora_tomar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora do Remédio"/>

            <TextView
                android:id="@+id/medicamento_tv_dose2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Dose"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/medicamento_tv_hora_tomar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora do Remédio"/>

            <TextView
                android:id="@+id/medicamento_tv_dose3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Dose"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/medicamento_tv_hora_tomar4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora do Remédio"/>

            <TextView
                android:id="@+id/medicamento_tv_dose4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="Dose"/>
        </LinearLayout>
            <TextView
                android:id="@+id/medicamento_tv_qtdeDias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginRight="80dp"
                android:text="teste"
                android:layout_gravity="end"
                />
    </LinearLayout>



    </android.support.v7.widget.CardView>

