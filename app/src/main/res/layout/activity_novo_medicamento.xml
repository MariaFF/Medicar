<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.maria.medicarsugar.medicamento.NovoMedicamento">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/medicamento_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/medicamento_edt_nome"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/medicamento_vencimento"
            android:hint="@string/medicamento_edt_vencimento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/medicamento_qtde_total"
            android:hint="@string/medicamento_edt_qtdeTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Inicial"/>
        <ImageButton
            android:id="@+id/medicamento_bt_dt_inicial"
            android:src="@drawable/ic_calendar_blank"
            android:layout_width="50dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retomavel ?"/>
        <RadioGroup
            android:id="@+id/medicamento_retomavel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/medicamento_retomavel_sim"
                android:text="Sim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:id="@+id/medicamento_retomavel_nao"
                android:text="Não"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>
        </RadioGroup>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
            android:id="@+id/medicamento_prazo_retomar"
            android:hint="@string/medicamento_edt_prazoRetomar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horário dos lembretes"/>
        <Spinner
            android:id="@+id/spinner_intervalo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_intervalo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primeiro Intervalo"/>
        <EditText
            android:id="@+id/ed_intervalo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_intervalo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Segundo Intervalo"/>
        <EditText
            android:id="@+id/ed_intervalo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_intervalo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terceiro Intervalo"/>
        <EditText
            android:id="@+id/ed_intervalo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Campos Obrigatórios"
            android:layout_marginTop="40dp"
            android:textColor="#8B0000"
            android:id="@+id/textView" />
    </LinearLayout>

</ScrollView>

